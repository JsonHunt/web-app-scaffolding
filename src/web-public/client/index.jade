doctype html
html(ng-app="PublicApp")
	head
		title Public site
		meta(charset="utf-8")
		meta(name="description" content="website")
		meta(name="keywords" content="website")
		meta(name="author" content="Integral Systems Inc.")
		
		link(rel="stylesheet" type="text/css" href="lib/bootstrap-3.3.4/css/bootstrap.min.css")
		link(rel="stylesheet" type="text/css" href="lib/ocModal.full.min.css")
		link(rel="stylesheet" type="text/css" href="lib/font-awesome-4.3.0/css/font-awesome.min.css")
		link(rel='stylesheet' type='text/css' href='http://fonts.googleapis.com/css?family=Days+One')
		link(rel="stylesheet" type="text/css" href="bundle.css")
	
	body.app.noselect(ng-controller="IndexController" ng-cloak='')
		.header
			.logo ''
			.title(ng-click="goto('')") Welcome to my website
				
			div.area.username(ng-if="user") {{user.username}}
			div.area.balance(ng-if="user") ${{user.balance}}
			div.button.pay(ng-if="user" ng-click="pay('Subscription',20)") Load balance
			div.button.logout(ng-if="user" ng-click="logout()") Log-out
			div.button.signup(ng-if="!user" ng-click="signup()") Sign-up
			div.button.login(ng-if="!user" ng-click="login()") Log-in
		.nav
			.item(
				ng-class="{active: path == 'messaging'}"
				ng-click="goto('messaging')"
			) Messaging
			.item(
				ng-class="{active: path == 'harvest'}"
				ng-click="goto('harvest')"
				) Harvest			
				
		.content(ng-view='')
			
		.footer Copyright 2015 Integral Systems Inc.
					
		script(type="text/javascript" src="lib/jquery-2.1.3.min.js")
		script(type="text/javascript" src="https://ajax.googleapis.com/ajax/libs/angularjs/1.3.15/angular.min.js")
		script(type="text/javascript" src="https://code.angularjs.org/1.3.15/angular-route.min.js")
		script(type="text/javascript" src="http://arshaw.com/xdate/downloads/0.8/xdate.js")
		script(type="text/javascript" src="http://cdnjs.cloudflare.com/ajax/libs/mathjs/1.4.0/math.min.js")
		script(type="text/javascript" src="http://underscorejs.org/underscore-min.js")
		script(type="text/javascript" src="lib/bootstrap-3.3.4/js/bootstrap.min.js")
		script(type="text/javascript" src="lib/ui-bootstrap-tpls-0.11.0.js")
		script(type="text/javascript" src="lib/ocModal.min.js")
		script(type="text/javascript" src="https://checkout.stripe.com/checkout.js")
	
		script(type="text/javascript" src="bundle.js")
		
