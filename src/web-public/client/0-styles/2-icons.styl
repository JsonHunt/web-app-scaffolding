i.fa
	@extends .center
	width 30px
	height 30px
	&.medium
		width 50px
		height 50px
	&.large
		width 70px
		height 70px
	&.left
		border-right 1px solid white
	&.right
		border-left 1px solid white
	&[ng-click]:hover:not(.disabled)
		background-color $light

