.float
	position absolute
	&.top
		top 5px
	&.bottom
		bottom 5px
	&.left
		left 5px
	&.right
		right 5px
	&.row.right
		right 10px
	i.fa
		@extends .center
		color black
		background-color white
		border 1px solid black
		width 25px
		height 25px
		border-radius 4px
		margin 2px
		&.active
			background-color $medium
