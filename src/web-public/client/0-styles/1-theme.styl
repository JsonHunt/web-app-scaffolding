$light = #6fb3f7
$medium = #3696f7
$dark = #007af4

$page-width = 1000

html
	height 100%

body
	padding 0
	margin 0
	height 100%
	font-family: 'Lato', sans-serif;
	font-size 14px

p, div
	cursor default

.noselect {
	-webkit-touch-callout: none
	-webkit-user-select: none
	-khtml-user-select: none
	-moz-user-select: none
	-ms-user-select: none
	user-select: none
}

.border
	border 1px solid $light

.app
	display flex
	flex-direction column
	>.header
		background-color $dark
		color white
		padding 10px
		display flex
		align-items center
		>.logo
			width: 50px
			height: 50px
			border: 1px solid black
			margin-right 20px
		>.title
			font-family: 'Days One', sans-serif;
			font-size: 20px
			flex 1
			cursor: default
		>.area
			padding 10px
			text-align: center
			min-width 80px
			border 1px outset $dark
			margin-left 2px
			cursor: default
		>.button
			padding 10px
			text-align: center
			min-width 80px
			border 1px outset $dark
			margin-left 2px
			cursor pointer
			&:hover
				background-color $medium

		.balance
			margin-left: 0
			border-left: 0

		.pay
			margin-left: 0
			margin-right: 10px
			border-left: 0

	>.nav
		background-color $medium
		border-top: 1px solid $dark
		border-bottom: 1px solid $medium
		display flex
		align-items: center
		justify-content: flex-end
		.item
			padding: 10px 30px
			color $darki
			text-decoration none
			cursor pointer
			border-left: 1px solid $light
			&:hover
				background-color $light
				color: $darki
		.item.active
			background-color $dark
			color: $darki

	>.content
		@extends .column, .fill
		padding 10px

	>.footer
		padding 10px
		color: $medium
		font-size 12px
		font-weight bold
		text-transform uppercase
		text-align center
		border-top 1px solid $light
